<div class="container">
    <div class="row col-xs-1 col-sm-3 col-md-6 col-lg-12">
        <h1>My Favourites</h1>
        {{#each bikes}}
        <div class="card m-3" style="width: 18rem;">
            <img src="{{this.url}}" class="card-img-top mt-2" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>